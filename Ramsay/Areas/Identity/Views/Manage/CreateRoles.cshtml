@model Ramsay.Areas.ViewModels.CreateRoleViewModel
@{
    ViewData["Title"] = "Roles";
}
<div class="row">
    <div class="col-md-6">
        <form id="create-role-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreateRole"></label>
                <input asp-for="CreateRole" class="form-control" />
                <span asp-validation-for="CreateRole" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create Role</button>
        </form>
    </div>
</div>


