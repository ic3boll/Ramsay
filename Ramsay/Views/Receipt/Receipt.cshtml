@model Ramsay.ViewModels.Receipt.ReceiptViewModel 
@using Ramsay.Models.Enums
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Receipt</h1>
<br />
<form action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ingredients" class="control-label"></label>
        <input asp-for="Ingredients" class="form-control" />
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preparation" class="control-label"></label>
        <input asp-for="Preparation" class="form-control" />
        <span asp-validation-for="Preparation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<ReceiptCategory>()">
                <option selected="selected" value="">Please select Category for your product</option>
            </select>
            <span asp-validation-for="Category" class="text-danger" />
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Receipt" class="btn btn-default" />
    </div>
</form>



